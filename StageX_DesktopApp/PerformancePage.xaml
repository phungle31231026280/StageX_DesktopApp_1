<Page x:Class="StageX_DesktopApp.PerformancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quản lý Suất diễn"
      Background="#FF1A1A1A" Foreground="White"
      Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="ButtonAddStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF198754"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ButtonEditStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF0D6EFD"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ButtonDeleteStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Control" x:Key="InputStyle">
            <Setter Property="Background" Value="#FF1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource InputStyle}"/>

        <Style TargetType="ComboBox" BasedOn="{StaticResource InputStyle}">
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#FF1A1A1A"/>
            </Style.Resources>
        </Style>

        <Style TargetType="DatePicker" BasedOn="{StaticResource InputStyle}"/>

    </Page.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="QUẢN LÝ SUẤT DIỄN" FontSize="24" FontWeight="Bold" Foreground="#FFffc107" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="#FF0C1220" CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock x:Name="FormTitle" Text="THÔNG TIN SUẤT DIỄN" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#FFffc107"/>
                <TextBox x:Name="PerformanceIdTextBox" Visibility="Collapsed"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Vở diễn:" Foreground="Gray" Margin="0,0,0,5"/>
                    <ComboBox Grid.Row="1" Grid.Column="0" x:Name="ShowComboBox" DisplayMemberPath="Title" SelectedValuePath="ShowId"/>

                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Rạp:" Foreground="Gray" Margin="0,0,0,5"/>
                    <ComboBox Grid.Row="1" Grid.Column="2" x:Name="TheaterComboBox" DisplayMemberPath="Name" SelectedValuePath="TheaterId"/>

                    <TextBlock Grid.Row="0" Grid.Column="4" Text="Ngày diễn (dd/mm/yyyy):" Foreground="Gray" Margin="0,0,0,5"/>
                    <DatePicker Grid.Row="1" Grid.Column="4" x:Name="PerformanceDatePicker"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Giờ bắt đầu (HH:mm):" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="4" Grid.Column="0" x:Name="StartTimeTextBox"/>

                    <TextBlock Grid.Row="3" Grid.Column="2" Text="Giá vé (VNĐ):" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="4" Grid.Column="2" x:Name="PriceTextBox"/>

                    <TextBlock Grid.Row="3" Grid.Column="4" Text="Trạng thái:" Foreground="Gray" Margin="0,0,0,5"/>
                    <ComboBox Grid.Row="4" Grid.Column="4" x:Name="StatusComboBox">
                        <ComboBoxItem Content="Đang mở bán"/>
                        <ComboBoxItem Content="Đã hủy"/>
                        <ComboBoxItem Content="Đã kết thúc"/>
                    </ComboBox>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button x:Name="SaveButton" Content="Lưu Suất Diễn" Style="{StaticResource ButtonAddStyle}" Click="SaveButton_Click" Width="150"/>
                    <Button x:Name="ClearButton" Content="Hủy Bỏ" Margin="10,0,0,0" Padding="15,8" Click="ClearButton_Click" Background="Transparent" BorderThickness="1" BorderBrush="#555" Foreground="White">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Background="#FF0C1220" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Tìm theo tên vở diễn:" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox x:Name="SearchShowNameTextBox"/>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="Lọc theo rạp:" Foreground="Gray" Margin="0,0,0,5"/>
                    <ComboBox x:Name="FilterTheaterComboBox" DisplayMemberPath="Name" SelectedValuePath="TheaterId"/>
                </StackPanel>

                <StackPanel Grid.Column="4" VerticalAlignment="Center">
                    <TextBlock Text="Lọc theo ngày:" Foreground="Gray" Margin="0,0,0,5"/>
                    <DatePicker x:Name="FilterDatePicker"/>
                </StackPanel>

                <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button x:Name="SearchButton" Content="Lọc" Style="{StaticResource ButtonAddStyle}" Click="SearchButton_Click" Width="80" Height="38"/>
                    <Button x:Name="ClearFilterButton" Content="Xóa" Margin="10,0,0,0" Click="ClearFilterButton_Click" Background="#444" Foreground="White" Width="60" Height="38">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <TextBlock Grid.Row="3" Text="DANH SÁCH SUẤT DIỄN" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <DataGrid Grid.Row="4"
                  x:Name="PerformancesGrid"
                  IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False"
                  LoadingRow="PerformancesGrid_LoadingRow" HeadersVisibility="Column"
                  Foreground="White" BorderThickness="0"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#333"
                  RowHeaderWidth="0" Background="Transparent" RowBackground="Transparent">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="#FFffc107"/>
                    <Setter Property="Padding" Value="10,12"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#333"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding PerformanceId}" Width="50" Visibility="Collapsed"/>
                <DataGridTextColumn Header="VỞ DIỄN" Binding="{Binding ShowTitle}" Width="2*"/>
                <DataGridTextColumn Header="RẠP" Binding="{Binding TheaterName}" Width="*"/>
                <DataGridTextColumn Header="NGÀY DIỄN" Binding="{Binding PerformanceDate, StringFormat='dd/MM/yyyy'}" Width="Auto"/>
                <DataGridTextColumn Header="GIỜ" Binding="{Binding StartTime, StringFormat='hh\\:mm'}" Width="Auto"/>
                <DataGridTextColumn Header="GIÁ VÉ" Binding="{Binding Price, StringFormat='N0'}" Width="Auto"/>

                <DataGridTemplateColumn Header="TRẠNG THÁI" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Status}" FontWeight="SemiBold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Đang mở bán">
                                                <Setter Property="Foreground" Value="#FF198754"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Đã hủy">
                                                <Setter Property="Foreground" Value="#FFDC3545"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Đã kết thúc">
                                                <Setter Property="Foreground" Value="Gray"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Sửa" Style="{StaticResource ButtonEditStyle}" Click="EditButton_Click"/>
                                <Button Content="Xóa" Style="{StaticResource ButtonDeleteStyle}" Click="DeleteButton_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>