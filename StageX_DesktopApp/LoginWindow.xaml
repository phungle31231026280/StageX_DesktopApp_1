<Window x:Class="StageX_DesktopApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StageX - Đăng nhập" 
        
        Height="500"  
        Width="400"
        
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResize"
        Background="#FF1A1A1A" Foreground="White">
    <StackPanel Margin="30">
        <TextBlock Text="ĐĂNG NHẬP HỆ THỐNG" FontSize="22" FontWeight="Bold" Foreground="#FFffc107" HorizontalAlignment="Center" Margin="0,10,0,30"/>

        <TextBlock Text="Email / Tên đăng nhập:" Margin="0,0,0,5"/>
        <TextBox x:Name="IdentifierTextBox" Padding="10" FontSize="14"/>

        <TextBlock Text="Mật khẩu:" Margin="0,15,0,5"/>
        <PasswordBox x:Name="PasswordBox" Padding="10" FontSize="14"/>

        <Button x:Name="LoginButton" Content="Đăng nhập" Margin="0,30,0,0" Padding="15" FontSize="16" FontWeight="Bold" Background="#FFffc107" Foreground="Black" Click="LoginButton_Click"/>

        <TextBlock x:Name="ErrorTextBlock" 
                   Margin="0,15,0,0" 
                   Foreground="#FFDC3545"  FontSize="14"           
                   FontWeight="Bold"
                   TextWrapping="Wrap" 
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>
    </StackPanel>
</Window>