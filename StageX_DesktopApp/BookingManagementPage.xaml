<Page x:Class="StageX_DesktopApp.BookingManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quản lý Đơn hàng"
      Background="#FF1A1A1A" Foreground="White"
      Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="ButtonSearchStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF0D6EFD"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonPrintStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFffc107"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="QUẢN LÝ ĐƠN HÀNG &amp; IN VÉ" FontSize="24" FontWeight="Bold" Foreground="#FFffc107" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="#FF0C1220" CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                    <TextBlock Text="Tra cứu (Mã đơn, Tên khách, SĐT):" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox x:Name="SearchBox" KeyDown="SearchBox_KeyDown"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                    <TextBlock Text="Trạng thái:" Foreground="Gray" Margin="0,0,0,5"/>
                    <ComboBox x:Name="StatusComboBox" Padding="8" SelectedIndex="0" FontSize="14">
                        <ComboBoxItem Content="-- Tất cả --"/>
                        <ComboBoxItem Content="Đang xử lý"/>
                        <ComboBoxItem Content="Đã hoàn thành"/>
                        <ComboBoxItem Content="Đã hủy"/>
                    </ComboBox>
                </StackPanel>

                <Button Grid.Column="2" Content="🔍 Tìm kiếm" Style="{StaticResource ButtonSearchStyle}" 
                        VerticalAlignment="Bottom" Click="SearchButton_Click"/>
            </Grid>
        </Border>

        <DataGrid Grid.Row="2" x:Name="BookingsGrid"
                  IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False"
                  Background="Transparent" RowBackground="#FF1E1E1E" AlternatingRowBackground="#FF252525"
                  HeadersVisibility="Column" Foreground="White" BorderThickness="0"
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#333">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã Đơn" Binding="{Binding BookingId}" Width="80" FontWeight="Bold"/>
                <DataGridTextColumn Header="Khách hàng" Binding="{Binding CustomerName}" Width="1.5*"/>
                <DataGridTextColumn Header="SĐT" Binding="{Binding CustomerPhone}" Width="120"/>
                <DataGridTextColumn Header="Vở diễn" Binding="{Binding ShowTitle}" Width="1.5*"/>
                <DataGridTextColumn Header="Ngày diễn" Binding="{Binding PerformanceTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="150"/>
                <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TotalAmount, StringFormat='N0'}" Width="120" FontWeight="Bold"/>

                <DataGridTemplateColumn Header="Trạng thái" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Status}" FontWeight="Bold" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Thành công">
                                                <Setter Property="Foreground" Value="#FF198754"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Đã thanh toán POS">
                                                <Setter Property="Foreground" Value="#FF198754"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Đã hủy">
                                                <Setter Property="Foreground" Value="#FFDC3545"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Đang chờ">
                                                <Setter Property="Foreground" Value="#FFffc107"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Hành động" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="PrintButton" Content="🖨 In Vé" 
                                    Style="{StaticResource ButtonPrintStyle}" 
                                    Click="PrintButton_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>