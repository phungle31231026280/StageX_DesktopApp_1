<Window x:Class="StageX_DesktopApp.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đặt lại mật khẩu" 
        
        SizeToContent="Height"   MinHeight="380"          Width="450"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResize"     Background="#FF1A1A1A" Foreground="White">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <StackPanel Margin="25">
        <TextBlock Text="Đổi mật khẩu" FontSize="22" FontWeight="Bold" Foreground="#FFffc107"/>

        <TextBlock Text="Mật khẩu hiện tại:" Style="{StaticResource LabelStyle}"/>
        <PasswordBox x:Name="CurrentPasswordBox"/>

        <TextBlock Text="Mật khẩu mới (ít nhất 3 ký tự):" Style="{StaticResource LabelStyle}"/>
        <PasswordBox x:Name="NewPasswordBox"/>

        <TextBlock Text="Xác nhận mật khẩu mới:" Style="{StaticResource LabelStyle}"/>
        <PasswordBox x:Name="ConfirmPasswordBox"/>

        <Button x:Name="SavePasswordButton" 
                Content="Xác nhận đổi" 
                Padding="15,10" FontWeight="Bold" 
                Background="#FF198754" Foreground="White"
                Margin="0,25,0,0" HorizontalAlignment="Left"
                Click="SavePasswordButton_Click"
                MinWidth="150"/>
    </StackPanel>
</Window>