<UserControl x:Class="StageX_DesktopApp.Views.ShowManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:StageX_DesktopApp.ViewModels"
             xmlns:util="clr-namespace:StageX_DesktopApp.Utilities"
             mc:Ignorable="d"
             Background="#FF1A1A1A" Foreground="White"
             d:DesignHeight="768" d:DesignWidth="1366">

    <UserControl.DataContext>
        <vm:ShowViewModel />
    </UserControl.DataContext>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="QUẢN LÝ VỞ DIỄN" FontSize="24" FontWeight="Bold" Foreground="#FFffc107" Margin="0,0,0,15"/>

        <Border Grid.Row="1" Background="#FF0C1220" CornerRadius="8" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Tiêu đề:" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputStyle}" Height="32"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Đạo diễn:" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Director}" Style="{StaticResource InputStyle}" Height="32"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Thời lượng (phút):" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Duration}" 
                                 util:TextBoxHelper.IsNumeric="True"
                                 Style="{StaticResource InputStyle}" Height="32"/>
                    </StackPanel>

                    <StackPanel Grid.Column="6">
                        <TextBlock Text="Link Poster:" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding PosterUrl}" Style="{StaticResource InputStyle}" Height="32"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Mô tả nội dung:" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Description}" 
                                 Style="{StaticResource InputStyle}"
                                 Height="110" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 VerticalContentAlignment="Top"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Thể loại (Chọn nhiều):" Foreground="Gray" Margin="0,0,0,5"/>
                        <ListBox ItemsSource="{Binding GenresList}" Height="110" SelectionMode="Multiple">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Foreground="black"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Diễn viên (Chọn nhiều):" Foreground="Gray" Margin="0,0,0,5"/>
                        <ListBox ItemsSource="{Binding ActorsList}" Height="110" SelectionMode="Multiple">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Foreground="black"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="{Binding SaveBtnContent}" Command="{Binding SaveCommand}" Style="{StaticResource ButtonAddStyle}" Width="150" Height="32"/>
                    <Button Content="Hủy" Command="{Binding ClearCommand}" Style="{StaticResource ButtonNormalStyle}" Margin="10,0,0,0" Width="120"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="#FF0C1220" Padding="10" Margin="0,0,0,10" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Tra cứu theo tên vở diễn:" Foreground="Gray" Margin="0,0,0,5" FontSize="12"/>
                    <TextBox Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputStyle}" Height="32">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding LoadShowsCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Lọc theo thể loại:" Foreground="Gray" Margin="0,0,0,5" />
                    <ComboBox ItemsSource="{Binding FilterGenres}" 
                              SelectedItem="{Binding SelectedFilterGenre}" 
                              DisplayMemberPath="GenreName"
                              Padding="10,0" Height="32" RenderTransformOrigin="0.499,0.624" Width="194"/>
                </StackPanel>

                <StackPanel Grid.Column="4" VerticalAlignment="Bottom">
                    <Button Content="Lọc" Command="{Binding LoadShowsCommand}" Style="{StaticResource ButtonEditStyle}" Width="80" Height="32" RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="0"/>
                                <RotateTransform/>
                                <TranslateTransform X="0"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <TextBlock Grid.Row="3" Text="DANH SÁCH VỞ DIỄN" FontSize="16" FontWeight="SemiBold" Foreground="#FFffc107" Margin="0,0,0,10"/>

        <DataGrid Grid.Row="4" ItemsSource="{Binding Shows}" 
                AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
      Foreground="White" BorderThickness="0"
      GridLinesVisibility="All" HorizontalGridLinesBrush="#333" VerticalGridLinesBrush="#333"
      RowHeaderWidth="0" RowHeight="30" Background="Transparent" RowBackground="Transparent">
<DataGrid.ColumnHeaderStyle>
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="Black"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="10,12"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>
</DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="TIÊU ĐỀ" Binding="{Binding Title}" Width="1.5*" 
                            ElementStyle="{StaticResource LeftCell}"/>

                <DataGridTextColumn Header="ĐẠO DIỄN" Binding="{Binding Director}" Width="*" 
                            ElementStyle="{StaticResource LeftCell}"/>

                <DataGridTextColumn Header="THỜI LƯỢNG" Binding="{Binding DurationMinutes, StringFormat={}{0} phút}" Width="110" 
                            ElementStyle="{StaticResource CenterCell}"/>

                <DataGridTemplateColumn Header="THỂ LOẠI" Width="1.2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding GenresDisplay}" 
                               TextTrimming="CharacterEllipsis" 
                               ToolTip="{Binding GenresDisplay}"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="5,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="DIỄN VIÊN" Width="1.5*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ActorsDisplay}" 
                               TextTrimming="CharacterEllipsis" 
                               ToolTip="{Binding ActorsDisplay}"
                               VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="5,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <UniformGrid Rows="1" HorizontalAlignment="Center" Width="140">

                                <Button Content="Sửa" Style="{StaticResource ButtonEditStyle}"
                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                CommandParameter="{Binding}"
                                Height="28" Padding="0" Margin="0,0,3,0"/>

                                <Button Content="Xóa" Style="{StaticResource ButtonDeleteStyle}"
                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                CommandParameter="{Binding}"
                                Height="28" Padding="0" Margin="3,0,0,0"/>
                            </UniformGrid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>