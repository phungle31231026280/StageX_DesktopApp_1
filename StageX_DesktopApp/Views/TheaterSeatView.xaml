<UserControl x:Class="StageX_DesktopApp.Views.TheaterSeatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:StageX_DesktopApp.ViewModels"
             xmlns:util="clr-namespace:StageX_DesktopApp.Utilities"
             xmlns:views="clr-namespace:StageX_DesktopApp.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Background="#FF1A1A1A" Foreground="White" d:DesignHeight="768" d:DesignWidth="1366">

    <UserControl.DataContext>
        <vm:TheaterSeatViewModel />
    </UserControl.DataContext>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="QUẢN LÝ SƠ ĐỒ RẠP &amp; HẠNG GHẾ" FontSize="24" FontWeight="Bold" Foreground="#FFffc107"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.8*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,10,0">
                <StackPanel>
                    <Border Background="#FF0C1220" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="{Binding PanelTitle}" FontSize="18" FontWeight="SemiBold" Foreground="#FFffc107" Margin="0,0,0,10"/>

                            <TextBlock Text="Tên rạp:" Margin="0,5,0,5" Foreground="Gray"/>
                            <TextBox Text="{Binding InputTheaterName, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsReadOnlyMode, Converter={StaticResource InvertBoolConverter}}"/>

                            <Grid Margin="0,10,0,0" Visibility="{Binding IsCreatingNew, Converter={StaticResource BoolToVis}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Số hàng:" Foreground="Gray"/>
                                    <TextBox Text="{Binding InputRows}" util:TextBoxHelper.IsNumeric="True"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock Text="Số cột:" Foreground="Gray"/>
                                    <TextBox Text="{Binding InputCols}" util:TextBoxHelper.IsNumeric="True"/>
                                </StackPanel>
                            </Grid>

                            <Button Content="Xem trước sơ đồ" Style="{StaticResource ButtonSpecialStyle}" Margin="0,10,0,0" 
                                    Command="{Binding PreviewMapCommand}"
                                    Visibility="{Binding IsCreatingNew, Converter={StaticResource BoolToVis}}"/>

                            <Separator Background="#333" Margin="0,15"/>

                            <TextBlock Text="Cấu hình rạp" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#FFffc107"/>

                            <Grid IsEnabled="{Binding IsReadOnlyMode, Converter={StaticResource InvertBoolConverter}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0" ItemsSource="{Binding RowOptions}" SelectedItem="{Binding SelectedRowOption}" Margin="0,0,5,0" ToolTip="Hàng"/>
                                    <ComboBox Grid.Column="1" ItemsSource="{Binding SeatNumberOptions}" SelectedItem="{Binding SelectedStartOption}" Margin="0,0,5,0" ToolTip="Từ"/>
                                    <ComboBox Grid.Column="2" ItemsSource="{Binding SeatNumberOptions}" SelectedItem="{Binding SelectedEndOption}" ToolTip="Đến"/>
                                </Grid>
                                <Button Grid.Row="1" Content="Chọn vùng" Style="{StaticResource ButtonSpecialStyle}" Margin="0,5,0,0" Command="{Binding SelectRangeCommand}"/>
                            </Grid>

                            <Grid Margin="0,10,0,0" IsEnabled="{Binding IsReadOnlyMode, Converter={StaticResource InvertBoolConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Gán hạng ghế:" Foreground="Gray"/>
                                    <ComboBox ItemsSource="{Binding Categories}" DisplayMemberPath="CategoryName" SelectedValuePath="CategoryId" SelectedValue="{Binding SelectedAssignCategoryId}"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="Áp dụng" Style="{StaticResource ButtonSpecialStyle}" VerticalAlignment="Bottom" Margin="5,0,0,0" Command="{Binding ApplyCategoryCommand}" Height="32"/>
                            </Grid>

                            <Button Content="Xóa ghế đang chọn" Style="{StaticResource ButtonDeleteStyle}" Margin="0,15,0,0" 
                                    Command="{Binding RemoveSelectedSeatsCommand}"
                                    IsEnabled="{Binding IsReadOnlyMode, Converter={StaticResource InvertBoolConverter}}" RenderTransformOrigin="0.5,0.5" Height="24">
                                <Button.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform AngleX="0.604"/>
                                        <RotateTransform/>
                                        <TranslateTransform X="0.123"/>
                                    </TransformGroup>
                                </Button.RenderTransform>
                            </Button>

                            <Separator Background="#333" Margin="0,5"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="{Binding SaveBtnContent}" Style="{StaticResource ButtonAddStyle}" Width="120"
                                        Command="{Binding SaveChangesCommand}"
                                        Visibility="{Binding IsReadOnlyMode, Converter={StaticResource InvertBoolConverter}, ConverterParameter=Vis}"/>

                                <Button Content="Hủy / Làm mới" Style="{StaticResource ButtonCancelStyle}" Margin="10,0,0,0" 
                                        Command="{Binding ResetToCreateModeCommand}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="#FF0C1220" CornerRadius="5">
                        <StackPanel>
                            <views:SeatCategoryView Height="250"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#FF27324A"/>

            <Grid Grid.Column="2" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#FF0C1220" CornerRadius="5" Padding="15" MinHeight="300" Margin="0,0,0,10">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="SƠ ĐỒ GHẾ" FontSize="18" FontWeight="SemiBold" Foreground="#FFffc107"  Margin="0,0,0,10"/>
                            <Viewbox Stretch="Uniform" StretchDirection="DownOnly" HorizontalAlignment="Center" VerticalAlignment="Top" MinHeight="250">
                                <ItemsControl ItemsSource="{Binding SeatMap}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4" MinHeight="{Binding RowHeight}">
                                                <TextBlock Text="{Binding RowName}" Width="25" VerticalAlignment="Center" FontWeight="Bold" Foreground="Gray" TextAlignment="Right" Margin="0,0,10,0"/>
                                                <ItemsControl ItemsSource="{Binding Items}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Button Content="{Binding DisplayText}" Command="{Binding SelectCommand}"
                                                                    Width="32" Height="28" Margin="2" FontSize="10" FontWeight="SemiBold"
                                                                    Background="{Binding BackgroundColor}" Foreground="White">
                                                                <Button.Template>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" x:Name="bd">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                                <Setter TargetName="bd" Property="BorderBrush" Value="Red"/>
                                                                                <Setter TargetName="bd" Property="BorderThickness" Value="2"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Hidden"/>
                                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                                <Setter Property="Width" Value="32"/>
                                                                            </DataTrigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Button.Template>
                                                            </Button>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Viewbox>
                        </StackPanel>
                    </Grid>
                </Border>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Theaters}" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                          Background="Transparent" RowBackground="Transparent" Foreground="White" BorderThickness="0"
                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#333" RowHeaderWidth="0" RowHeight="31">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding TheaterId}" Width="50" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="TÊN RẠP" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="SỨC CHỨA" Binding="{Binding TotalSeats}" Width="Auto" ElementStyle="{StaticResource CenterCell}"/>

                        <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Button Content="Xem" Command="{Binding DataContext.SelectTheaterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"
                                                Height="28" Padding="0" Width="80" HorizontalAlignment="Center">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource ButtonViewStyle}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CanDelete}" Value="False">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <UniformGrid Rows="1" HorizontalAlignment="Center" Width="140">
                                            <UniformGrid.Style>
                                                <Style TargetType="UniformGrid">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CanDelete}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </UniformGrid.Style>
                                            <Button Content="Sửa" Style="{StaticResource ButtonEditStyle}" Command="{Binding DataContext.SelectTheaterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Height="28" Padding="0" Margin="0,0,3,0"/>
                                            <Button Content="Xóa" Style="{StaticResource ButtonDeleteStyle}" Command="{Binding DataContext.DeleteTheaterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Height="28" Padding="0" Margin="3,0,0,0"/>
                                        </UniformGrid>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>