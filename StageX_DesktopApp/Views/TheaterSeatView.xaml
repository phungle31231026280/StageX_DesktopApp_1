<UserControl x:Class="StageX_DesktopApp.Views.TheaterSeatView"
             xmlns:views="clr-namespace:StageX_DesktopApp.Views"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:util="clr-namespace:StageX_DesktopApp.Utilities"
             xmlns:vm="clr-namespace:StageX_DesktopApp.ViewModels"
             mc:Ignorable="d"
             Background="#FF1A1A1A" Foreground="White"
             d:DesignHeight="768" d:DesignWidth="1366">

    <UserControl.DataContext>
        <vm:TheaterSeatViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style x:Key="ButtonBaseStyle" TargetType="Button">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>

                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ButtonAddStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
            <Setter Property="Background" Value="#FF198754"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="ButtonEditStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
            <Setter Property="Background" Value="#FF0D6EFD"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="ButtonDeleteStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="ButtonNormalStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
            <Setter Property="Background" Value="#FF6C757D"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="ButtonViewStyle"  TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
            <Setter Property="Background" Value="#FFffc107"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style x:Key="ButtonSaveStyle" TargetType="Button" BasedOn="{StaticResource ButtonEditStyle}">
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style x:Key="ButtonCancelStyle"  TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
            <Setter Property="Background" Value="#FF6C757D"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="ButtonSpecialStyle"  TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
            <Setter Property="Background" Value="#FFffc107"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Background" Value="#EAEAEA"/>
            <Setter Property="Foreground" Value="black"/>
            <Setter Property="BorderBrush" Value="#555"/>
        </Style>
        <Style TargetType="ComboBox">
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="White"/>
            </Style.Resources>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="CenterCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="QUẢN LÝ SƠ ĐỒ RẠP &amp; HẠNG GHẾ" FontSize="24" FontWeight="Bold" Foreground="#FFffc107" Margin="0,0,0,15"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.4*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,10,0">
                <StackPanel>
                    <Border Background="#FF0C1220" CornerRadius="5" Padding="15">
                        <StackPanel>
                            <TextBlock Text="1. TẠO RẠP MỚI (Xem trước)" FontSize="18" FontWeight="SemiBold" Foreground="#FFffc107" Margin="0,0,0,10"/>
                            <TextBlock Text="Tên rạp:" Margin="0,5,0,5" Foreground="Gray"/>
                            <TextBox Text="{Binding NewTheaterName, UpdateSourceTrigger=PropertyChanged}"/>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Số hàng:" Margin="0,5,0,5" Foreground="Gray"/>
                                    <TextBox Text="{Binding NewRows, UpdateSourceTrigger=PropertyChanged}" util:TextBoxHelper.IsNumeric="True"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock Text="Số cột:" Margin="0,5,0,5" Foreground="Gray"/>
                                    <TextBox Text="{Binding NewCols, UpdateSourceTrigger=PropertyChanged}" util:TextBoxHelper.IsNumeric="True"/>
                                </StackPanel>
                            </Grid>
                            <Button Content="Xem trước sơ đồ" Style="{StaticResource ButtonSpecialStyle}" Margin="0,15,0,0" Command="{Binding PreviewNewTheaterCommand}" Height="22"/>
                        </StackPanel>
                    </Border>

                    <Border x:Name="EditTheaterPanel" Background="#FF0C1220" CornerRadius="5" Padding="15" 
                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}">
                        <StackPanel>
                            <TextBlock Text="{Binding EditPanelTitle}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#FFffc107"/>

                            <StackPanel>
                                <TextBlock Text="Tên rạp:" Margin="0,5,0,5" Foreground="Gray"/>
                                <TextBox Text="{Binding EditTheaterName, UpdateSourceTrigger=PropertyChanged}"/>
                                <Button Content="Lưu tên rạp" Style="{StaticResource ButtonSaveStyle}" Margin="0,10,0,0" Command="{Binding SaveTheaterNameCommand}"/>
                                <Separator Background="#333" Margin="0,15" Visibility="{Binding IsCreatingNew, Converter={StaticResource BoolToVis}}"/>
                            </StackPanel>

                            <TextBlock Text="Chọn vùng" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#FFffc107"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Hàng:" Margin="0,5,0,5" Foreground="Gray"/>
                                    <ComboBox x:Name="AssignRowComboBox"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                    <TextBlock Text="Từ ghế:" Margin="0,5,0,5" Foreground="Gray"/>
                                    <ComboBox x:Name="AssignSeatStartComboBox"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Margin="5,0,0,0">
                                    <TextBlock Text="Đến ghế:" Margin="0,5,0,5" Foreground="Gray"/>
                                    <ComboBox x:Name="AssignSeatEndComboBox"/>
                                </StackPanel>
                            </Grid>
                            <Button Content="Thêm vùng vào lựa chọn" Background="#FF0D6EFD" Foreground="White" Padding="8" FontWeight="Bold" Margin="0,10,0,0" Click="SelectRangeButton_Click"/>

                            <Separator Background="#333" Margin="0,15"/>

                            <TextBlock Text="Hành động (Cho ghế đang chọn)" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#FFffc107"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Chọn Hạng ghế:" Margin="0,5,0,5" Foreground="Gray"/>
                                    <ComboBox x:Name="AssignCategoryComboBox" ItemsSource="{Binding Categories}" DisplayMemberPath="CategoryName" SelectedValuePath="CategoryId"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="Áp dụng" Style="{StaticResource ButtonSpecialStyle}" VerticalAlignment="Bottom" Margin="0,0,0,1" Click="AssignSeatButton_Click"/>
                            </Grid>

                            <Button Content="Xóa ghế đang chọn" Background="#FFDC3545" Foreground="White" Padding="8" FontWeight="Bold" Margin="0,10,0,0" 
                                    Click="RemoveSelectedSeats_Click" Visibility="{Binding IsCreatingNew, Converter={StaticResource BoolToVis}}"/>

                            <Separator Background="#333" Margin="0,15"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="{Binding SaveBtnContent}" Style="{StaticResource ButtonAddStyle}" 
                                        Padding="15,10" 
                                        Command="{Binding SaveOrUpdateTheaterCommand}"/>
                                <Button Content="Đóng / Hủy" Style="{StaticResource ButtonCancelStyle}" Margin="10,0,0,0" Command="{Binding CancelEditCommand}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="#FF0C1220" CornerRadius="5" Padding="15" Margin="0,10,0,10">
                        <views:SeatCategoryView Height="auto"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#FF27324A"/>

            <Grid Grid.Column="2" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#FF0C1220" CornerRadius="5" Padding="15" MinHeight="250" Margin="0,0,0,10">
                    <Grid>
                        <StackPanel>
                            <TextBlock x:Name="SeatMapTitle" Text="SƠ ĐỒ GHẾ" FontSize="18" FontWeight="SemiBold" Foreground="#FFffc107"  Margin="0,0,0,10"/>

                            <Viewbox Stretch="Uniform" StretchDirection="DownOnly" HorizontalAlignment="Center" VerticalAlignment="Top">
                                <Grid x:Name="SeatMapGrid" Background="Transparent" Margin="10"/>
                            </Viewbox>

                        </StackPanel>
                        <Image Source="/Assets/logo.png" Width="100" Margin="20,0,0,0" VerticalAlignment="Top" Opacity="0.5" HorizontalAlignment="Right"/>
                    </Grid>
                </Border>
                
                <DataGrid Grid.Row="2" ItemsSource="{Binding Theaters}" IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False" Background="Transparent" RowBackground="Transparent" Foreground="White" BorderThickness="0" GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#333" RowHeaderWidth="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding TheaterId}" Width="50" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="TÊN RẠP" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="SỨC CHỨA" Binding="{Binding TotalSeats}" Width="Auto" ElementStyle="{StaticResource CenterCell}"/>

                        <DataGridTemplateColumn Header="HÀNH ĐỘNG" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Button Content="Xem" Margin="0,0,5,0" 
                                                Command="{Binding DataContext.SelectTheaterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource ButtonViewStyle}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CanDelete}" Value="False">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <Button Content="Sửa" Margin="0,0,5,0" 
                                                Command="{Binding DataContext.SelectTheaterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource ButtonEditStyle}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CanDelete}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <Button Content="Xóa"
                                                Command="{Binding DataContext.DeleteTheaterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource ButtonDeleteStyle}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CanDelete}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>