<Page x:Class="StageX_DesktopApp.TheaterSeatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quản lý Rạp &amp; Ghế"
      Background="#FF1A1A1A" Foreground="White"
      Loaded="Page_Loaded">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <Style x:Key="ButtonAddStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF198754"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="ButtonEditStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF0D6EFD"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>
        <Style x:Key="ButtonDeleteStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,3"/>
        </Style>
        <Style x:Key="ButtonSaveStyle" TargetType="Button" BasedOn="{StaticResource ButtonEditStyle}">
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style x:Key="ButtonCancelStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style x:Key="ButtonSpecialStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFffc107"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="8,3"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555"/>
        </Style>
    </Page.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Quản lý Rạp, Ghế &amp; Hạng ghế" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.4*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,10,0">
                <StackPanel>

                    <Border Background="#FF0C1220" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="1. Tạo rạp mới (Xem trước)" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

                            <TextBlock Text="Tên rạp:" Margin="0,5,0,5"/>
                            <TextBox x:Name="AddTheaterNameTextBox" Text="Tên rạp (ví dụ: Rạp 1)" 
                                     Foreground="Gray" GotFocus="Placeholder_GotFocus" LostFocus="AddTheaterNameTextBox_LostFocus"/>

                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Số hàng:" Margin="0,5,0,5"/>
                                    <TextBox x:Name="AddTheaterRowsTextBox" Text="Số hàng" 
                                             Foreground="Gray" GotFocus="Placeholder_GotFocus" LostFocus="AddTheaterRowsTextBox_LostFocus"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock Text="Số cột:" Margin="0,5,0,5"/>
                                    <TextBox x:Name="AddTheaterColsTextBox" Text="Số cột" 
                                             Foreground="Gray" GotFocus="Placeholder_GotFocus" LostFocus="AddTheaterColsTextBox_LostFocus"/>
                                </StackPanel>
                            </Grid>

                            <Button x:Name="PreviewTheaterButton" Content="Xem trước sơ đồ" 
                                    Style="{StaticResource ButtonSpecialStyle}" Margin="0,15,0,0" 
                                    Click="PreviewTheaterButton_Click"/>
                        </StackPanel>
                    </Border>

                    <Border x:Name="EditTheaterPanel" Background="#FF0C1220" CornerRadius="5" Padding="15" Margin="0,10,0,10" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock x:Name="EditPanelTitle" Text="2. Cấu hình Rạp" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <TextBox x:Name="EditTheaterIdTextBox" Visibility="Collapsed"/>

                            <StackPanel x:Name="RenameTheaterPanel">
                                <TextBlock Text="Tên rạp:" Margin="0,5,0,5"/>
                                <TextBox x:Name="EditTheaterNameTextBox"/>
                                <TextBox x:Name="ModifyColsTextBox" Visibility="Collapsed"/>
                                <TextBox x:Name="ModifyRowsTextBox" Visibility="Collapsed"/>

                                <Button x:Name="SaveTheaterButton" Content="Lưu tên rạp" Style="{StaticResource ButtonSaveStyle}" Margin="0,10,0,0" Click="SaveTheaterButton_Click"/>
                            </StackPanel>

                            <Separator Background="#333" Margin="0,15"/>

                            <TextBlock Text="Công cụ chọn vùng" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#FFffc107"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Hàng:" Margin="0,5,0,5"/>
                                    <ComboBox x:Name="AssignRowComboBox" Padding="6"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                    <TextBlock Text="Từ ghế:" Margin="0,5,0,5"/>
                                    <ComboBox x:Name="AssignSeatStartComboBox" Padding="6"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Margin="5,0,0,0">
                                    <TextBlock Text="Đến ghế:" Margin="0,5,0,5"/>
                                    <ComboBox x:Name="AssignSeatEndComboBox" Padding="6"/>
                                </StackPanel>
                            </Grid>
                            <Button x:Name="SelectRangeButton" Content="Thêm vùng vào lựa chọn" 
                                    Background="#FF0D6EFD" Foreground="White" Padding="8" FontWeight="Bold" Margin="0,10,0,0" 
                                    Click="SelectRangeButton_Click"/>

                            <Separator Background="#333" Margin="0,15"/>

                            <TextBlock Text="Hành động (Cho ghế đang chọn)" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#FFffc107"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Chọn Hạng ghế:" Margin="0,5,0,5"/>
                                    <ComboBox x:Name="AssignCategoryComboBox" DisplayMemberPath="CategoryName" SelectedValuePath="CategoryId" Padding="6"/>
                                </StackPanel>
                                <Button x:Name="AssignSeatButton" Grid.Column="1" Content="Áp dụng" 
                                        Style="{StaticResource ButtonSpecialStyle}" Foreground="Black" VerticalAlignment="Bottom" Margin="0,0,0,1"
                                        Click="AssignSeatButton_Click"/>
                            </Grid>

                            <Button x:Name="RemoveSelectedSeatsButton" Content="Xóa ghế đang chọn (Tạo lối đi)" 
                                    Background="#FFDC3545" Foreground="White" Padding="8" FontWeight="Bold" Margin="0,10,0,0"
                                    Click="RemoveSelectedSeats_Click"/>

                            <Separator Background="#333" Margin="0,15"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="SaveNewTheaterButton" Content="LƯU RẠP MỚI (Vào CSDL)" 
                                        Style="{StaticResource ButtonAddStyle}" Padding="15,10"
                                        Visibility="Collapsed" Click="SaveNewTheaterButton_Click"/>

                                <Button x:Name="CancelEditButton" Content="Đóng / Hủy" Style="{StaticResource ButtonCancelStyle}" Margin="10,0,0,0" Click="CancelEditButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="#FF0C1220" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="3. Quản lý hạng ghế" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBox x:Name="AddCategoryNameTextBox" Text="Tên hạng ghế" 
                                             Foreground="Gray" GotFocus="Placeholder_GotFocus" LostFocus="AddCategoryNameTextBox_LostFocus" 
                                             Margin="0,0,0,10"/>
                                    <TextBox x:Name="AddCategoryPriceTextBox" Text="Giá cơ bản" 
                                             Foreground="Gray" GotFocus="Placeholder_GotFocus" LostFocus="AddCategoryPriceTextBox_LostFocus"/>
                                </StackPanel>
                                <Button x:Name="AddCategoryButton" Grid.Column="1" Content="Thêm" 
                                        Style="{StaticResource ButtonAddStyle}" 
                                        VerticalAlignment="Center" Height="80" Width="80" 
                                        Click="AddCategoryButton_Click"/>
                            </Grid>

                            <DataGrid x:Name="CategoriesGrid" MaxHeight="200" Margin="0,15,0,0"
                                      IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False"
                                      LoadingRow="CategoriesGrid_LoadingRow" HeadersVisibility="Column, Row">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding CategoryId}" Width="30" Visibility="Collapsed"/>
                                    <DataGridTextColumn Header="Tên Hạng" Binding="{Binding CategoryName}" Width="*"/>
                                    <DataGridTextColumn Header="Giá" Binding="{Binding BasePrice, StringFormat='N0'}" Width="Auto"/>

                                    <DataGridTemplateColumn Header="Màu" Width="50">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding DisplayColor}" Width="20" Height="20" CornerRadius="3" BorderBrush="Gray" BorderThickness="1"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="Hành động" Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button x:Name="EditCategoryButton" Content="Sửa" Style="{StaticResource ButtonEditStyle}" Click="EditCategoryButton_Click"/>
                                                    <Button x:Name="DeleteCategoryButton" Content="Xóa" Style="{StaticResource ButtonDeleteStyle}" Click="DeleteCategoryButton_Click"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#FF27324A"/>

            <Grid Grid.Column="2" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#FF0C1220" CornerRadius="5" Padding="15" MinHeight="250">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="SeatMapTitle" Text="Sơ đồ ghế..." FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" MaxHeight="400">
                                <WrapPanel x:Name="SeatMapWrapPanel"/>
                            </ScrollViewer>
                        </StackPanel>
                        <Image Grid.Column="1" Source="/public/assets/images/logo.svg" Width="100" Margin="20,0,0,0" VerticalAlignment="Top" Opacity="0.5" ToolTip="Ảnh minh họa"/>
                    </Grid>
                </Border>

                <TextBlock Grid.Row="1" Text="Danh sách rạp hiện có" FontSize="18" FontWeight="SemiBold" Margin="0,20,0,10"/>

                <DataGrid Grid.Row="2" x:Name="TheatersGrid" 
                          IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False" 
                          LoadingRow="TheatersGrid_LoadingRow" HeadersVisibility="Column, Row"
                          SelectionChanged="TheatersGrid_SelectionChanged"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding TheaterId}" Width="50" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="Tên Rạp" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Sức chứa" Binding="{Binding TotalSeats}" Width="Auto"/>

                        <DataGridTemplateColumn Header="Hành động" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="EditTheaterButton" Content="Sơ đồ / Sửa" 
                                                Style="{StaticResource ButtonSpecialStyle}" Margin="0,0,5,0" 
                                                Click="EditTheaterButton_Click"
                                                Visibility="{Binding CanEdit, Converter={StaticResource BoolToVis}}"/>

                                        <Button x:Name="DeleteTheaterButton" Content="Xóa" 
                                                Style="{StaticResource ButtonDeleteStyle}" 
                                                Click="DeleteTheaterButton_Click"
                                                Visibility="{Binding CanDelete, Converter={StaticResource BoolToVis}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Page>