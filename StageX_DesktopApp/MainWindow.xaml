<Window x:Class="StageX_DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StageX - Hệ thống Quản lý" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        Background="#FF1A1A1A" Foreground="White" WindowState="Maximized">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter Margin="{TemplateBinding Padding}" 
                                              HorizontalAlignment="Left" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FF0C1220" CornerRadius="0,10,10,0">
            <StackPanel x:Name="MenuStackPanel">
                <TextBlock Text="StageX" 
                           Foreground="#FFffc107" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="20"
                           TextAlignment="Center"/>

                <Button x:Name="NavDashboard" Content="Báo cáo thống kê" Click="NavDashboard_Click" Style="{StaticResource MenuButtonStyle}"/>

                <Button x:Name="NavPerformanceMgmt" Content="Quản lý Suất diễn" Click="NavPerformanceMgmt_Click" Style="{StaticResource MenuButtonStyle}"/>

                <Button x:Name="NavShowMgmt" Content="Quản lý Vở diễn" Click="NavShowMgmt_Click" Style="{StaticResource MenuButtonStyle}"/>

                <Button x:Name="NavTheaterMgmt" Content="Quản lý Rạp, Ghế &amp; Hạng ghế" Click="NavTheaterMgmt_Click" Style="{StaticResource MenuButtonStyle}"/>

                <Button x:Name="NavActorMgmt" Content="Quản lý Diễn viên" Click="NavActorMgmt_Click" Style="{StaticResource MenuButtonStyle}"/>

                <Button x:Name="NavGenreMgmt" Content="Quản lý Thể loại" Click="NavGenreMgmt_Click" Style="{StaticResource MenuButtonStyle}"/>

                <Button x:Name="NavAccountMgmt" Content="Quản lý Tài khoản" Click="NavAccountMgmt_Click" Style="{StaticResource MenuButtonStyle}"/>

                <Button x:Name="NavSellTicket" Content="Bán vé" Click="NavSellTicket_Click" Style="{StaticResource MenuButtonStyle}" />
                <Button x:Name="NavStaffBookingMgmt" Content="Quản lý Đơn hàng &amp; In vé" Click="NavStaffBookingMgmt_Click" Style="{StaticResource MenuButtonStyle}"/>
                <Button x:Name="NavProfile" Content="Quản lý Hồ sơ cá nhân" Click="NavProfile_Click" Style="{StaticResource MenuButtonStyle}"/>

                

                <Button x:Name="NavLogout" Content="Đăng xuất" Click="NavLogout_Click" 
                        Margin="10,30,10,10" Padding="15,10" FontWeight="SemiBold" Background="#FFDC3545">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#FF1A1A1A" Margin="10" CornerRadius="10">
            <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden" />
        </Border>

    </Grid>
</Window>