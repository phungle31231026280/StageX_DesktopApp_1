<Window x:Class="StageX_DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StageX - Hệ thống Quản lý" 
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        Background="#FF1A1A1A" Foreground="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FF0C1220" CornerRadius="0,10,10,0">
            <StackPanel>
                <TextBlock Text="StageX" 
                           Foreground="#FFffc107" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="20"
                           TextAlignment="Center"/>

                <Button x:Name="NavDashboard" Content="Bảng điều khiển" Margin="10,5" Padding="15,10" FontWeight="SemiBold"/>
                <Button x:Name="NavGenreMgmt" Content="Quản lý Thể loại" Margin="10,5" Padding="15,10" FontWeight="SemiBold"/>
                <Button x:Name="NavShowMgmt" Content="Quản lý Vở diễn" Margin="10,5" Padding="15,10" FontWeight="SemiBold"/>
                <Button x:Name="NavTheaterMgmt" Content="Quản lý Rạp, Ghế &amp; Hạng ghế" Margin="10,5" Padding="15,10" FontWeight="SemiBold"/>
                <Button x:Name="NavPerformanceMgmt" Content="Quản lý Suất diễn" Margin="10,5" Padding="15,10" FontWeight="SemiBold"/>
                <Button x:Name="NavAccountMgmt" Content="Quản lý Tài khoản" Margin="10,5" Padding="15,10" FontWeight="SemiBold"/>
                <Button x:Name="NavAdminBookingMgmt" Content="Quản lý Đơn hàng (Tra cứu)" Margin="10,5" Padding="15,10" FontWeight="SemiBold"/>

                <Button x:Name="NavSellTicket" Content="Bán vé" Margin="10,5" Padding="15,10" FontWeight="SemiBold" />
                <Button x:Name="NavStaffBookingMgmt" Content="Quản lý Đơn hàng (Đổi/Hủy)" Margin="10,5" Padding="15,10" FontWeight="SemiBold" />

                <Button x:Name="NavProfile" Content="Quản lý Hồ sơ cá nhân" Margin="10,5" Padding="15,10" FontWeight="SemiBold"/>
                <Button x:Name="NavLogout" Content="Đăng xuất" Margin="10,30,10,10" Padding="15,10" FontWeight="SemiBold" Background="#FFDC3545"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#FF1A1A1A" Margin="10" CornerRadius="10">
            <Frame x:Name="MainContentFrame"
                   NavigationUIVisibility="Hidden" />
        </Border>

    </Grid>
</Window>