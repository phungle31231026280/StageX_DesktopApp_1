<Page x:Class="StageX_DesktopApp.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      
      mc:Ignorable="d" 
      Title="Bảng điều khiển"
      Background="#FF1A1A1A" Foreground="White"
      Loaded="Page_Loaded" Height="700" Width="1000">

    <Page.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF0C1220"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="BẢNG ĐIỀU KHIỂN" FontSize="24" FontWeight="Bold" Foreground="#FFffc107" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnExportExcel" Content="Xuất Excel" Background="#FF198754" Foreground="White" Padding="10,5" Margin="0,0,5,0" Click="BtnExportExcel_Click"/>
                    <Button x:Name="BtnExportPdf" Content="Xuất PDF" Background="#FFDC3545" Foreground="White" Padding="10,5" Click="BtnExportPdf_Click"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Tổng doanh thu" Foreground="#FFFFC107"/>
                        <TextBlock x:Name="RevenueTotalText" Text="0đ" FontSize="22" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Đơn hàng" Foreground="#FFFFC107"/>
                        <TextBlock x:Name="OrderTotalText" Text="0" FontSize="22" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Vở diễn" Foreground="#FFFFC107"/>
                        <TextBlock x:Name="ShowTotalText" Text="0" FontSize="22" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Thể loại" Foreground="#FFFFC107"/>
                        <TextBlock x:Name="GenreTotalText" Text="0" FontSize="22" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="2" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Height="320">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Doanh thu theo tháng" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFC107" Margin="0,0,0,10"/>
                        <lvc:CartesianChart x:Name="RevenueChart" Grid.Row="1" Background="Transparent" LegendLocation="None">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis LabelsRotation="15">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="1" StrokeThickness="0"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis LabelFormatter="{Binding RevenueFormatter}"></lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Height="320">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Tình trạng vé (Bán/Trống)" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFC107"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,10">
                            <RadioButton x:Name="WeekFilterButton" Content="Tuần" IsChecked="True" GroupName="Filter" Foreground="White" Margin="0,0,10,0" Checked="FilterChanged"/>
                            <RadioButton x:Name="MonthFilterButton" Content="Tháng" GroupName="Filter" Foreground="White" Margin="0,0,10,0" Checked="FilterChanged"/>
                            <RadioButton x:Name="YearFilterButton" Content="Năm" GroupName="Filter" Foreground="White" Checked="FilterChanged"/>
                        </StackPanel>

                        <lvc:CartesianChart x:Name="OccupancyChart" Grid.Row="2" LegendLocation="Bottom" Background="Transparent">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis LabelsRotation="0">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="1" StrokeThickness="0"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Height="280">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Tỷ lệ vé bán (Top 5)" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFC107" Margin="0,0,0,10"/>

                        <lvc:PieChart x:Name="ShowPieChart" Grid.Row="1" LegendLocation="Right" InnerRadius="0" Hoverable="True"/>
                    </Grid>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Height="280">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Chi tiết Top 5 Vở diễn" FontSize="16" FontWeight="SemiBold" Foreground="#FFFFC107" Margin="0,0,0,10"/>
                        <DataGrid Grid.Row="1" x:Name="TopShowsGrid" IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False"
                                  Background="Transparent" RowBackground="Transparent" Foreground="White" BorderThickness="0"
                                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#333"
                                  HeadersVisibility="Column" RowHeaderWidth="0">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Black"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="STT" Binding="{Binding Index}" Width="40"/>
                                <DataGridTextColumn Header="Tên vở diễn" Binding="{Binding show_name}" Width="*"/>
                                <DataGridTextColumn Header="Số vé bán" Binding="{Binding sold_tickets}" Width="Auto" FontWeight="Bold"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>