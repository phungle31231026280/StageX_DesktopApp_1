<Page x:Class="StageX_DesktopApp.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      
      xmlns:oxy="http://oxyplot.org/wpf"
      
      mc:Ignorable="d" 
      Title="Bảng điều khiển"
      Background="#FF1A1A1A" Foreground="White"
      Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="KpiCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF0C1220"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="MinHeight" Value="100"/>
        </Style>
        <Style x:Key="KpiTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFffc107"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="25">
            <TextBlock Text="Bảng điều khiển" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource KpiCardStyle}" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Tổng doanh thu" Style="{StaticResource KpiTitleStyle}"/>
                        <TextBlock x:Name="TotalRevenueText" Text="0đ" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Style="{StaticResource KpiCardStyle}" Margin="10,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Đơn hàng" Style="{StaticResource KpiTitleStyle}"/>
                        <TextBlock x:Name="TotalBookingsText" Text="0" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource KpiCardStyle}" Margin="10,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Vở diễn" Style="{StaticResource KpiTitleStyle}"/>
                        <TextBlock x:Name="TotalShowsText" Text="0" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="3" Style="{StaticResource KpiCardStyle}" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Suất diễn" Style="{StaticResource KpiTitleStyle}"/>
                        <TextBlock x:Name="TotalPerformancesText" Text="0" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource KpiCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Doanh thu theo tháng" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <oxy:PlotView Model="{Binding RevenueModel}" Height="300" Background="Transparent"/>

                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                    <Border Style="{StaticResource KpiCardStyle}" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Vé bán (Tháng này)" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

                            <oxy:PlotView Model="{Binding TicketModel}" Height="200" Background="Transparent"/>

                        </StackPanel>
                    </Border>

                    <Button x:Name="ExportReportButton" Content="Xuất Báo cáo (Excel)" 
                            Background="#FF198754" Foreground="White" FontWeight="Bold"
                            Padding="15,10" Click="ExportReportButton_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>