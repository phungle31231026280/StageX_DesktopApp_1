<Window x:Class="StageX_DesktopApp.TestHashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Công cụ Test Hash" Height="300" Width="500">
    <StackPanel Margin="20">
        <TextBlock Text="Nhập mật khẩu (ví dụ: 12345678):"/>
        <TextBox x:Name="PasswordToHash" Padding="5"/>
        <Button Content="Tạo Hash" Margin="0,20,0,0" Click="HashButton_Click"/>
        <TextBlock Text="Kết quả Hash (để copy):" Margin="0,20,0,5"/>
        <TextBox x:Name="ResultHash" IsReadOnly="True" TextWrapping="Wrap"/>
    </StackPanel>
</Window>