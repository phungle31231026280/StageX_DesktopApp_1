<Page x:Class="StageX_DesktopApp.ShowManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quản lý Vở diễn"
      Background="#FF1A1A1A" Foreground="White"
      Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="ButtonAddStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF198754"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CheckableListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="#FF252525"/>

            <Setter Property="Foreground" Value="White"/>

            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="6" 
                            SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF3A3A3A"/>
                            </Trigger>

                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FFffc107"/>
                                <Setter TargetName="Bd" Property="Background" Value="#FF353535"/>
                                <Setter Property="Foreground" Value="#FFffc107"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FF0C1220" CornerRadius="5" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="CHI TIẾT VỞ DIỄN" FontSize="18" FontWeight="Bold" Foreground="#FFffc107" Margin="0,0,0,10"/>
                    <TextBox x:Name="ShowIdTextBox" Visibility="Collapsed"/>

                    <TextBlock Text="Tiêu đề vở diễn:" Foreground="Gray"/>
                    <TextBox x:Name="ShowTitleTextBox" Padding="8" FontSize="14" Margin="0,5,0,10" Background="#FF1A1A1A" Foreground="White" BorderBrush="#333"/>

                    <TextBlock Text="Đạo diễn:" Foreground="Gray"/>
                    <TextBox x:Name="ShowDirectorTextBox" Padding="8" FontSize="14" Margin="0,5,0,10" Background="#FF1A1A1A" Foreground="White" BorderBrush="#333"/>

                    <TextBlock Text="Thời lượng (phút):" Foreground="Gray"/>
                    <TextBox x:Name="ShowDurationTextBox" Padding="8" FontSize="14" Margin="0,5,0,10" Background="#FF1A1A1A" Foreground="White" BorderBrush="#333"/>

                    <TextBlock Text="Link Poster (URL):" Foreground="Gray"/>
                    <TextBox x:Name="ShowPosterTextBox" Padding="8" FontSize="14" Margin="0,5,0,10" Background="#FF1A1A1A" Foreground="White" BorderBrush="#333"/>

                    <TextBlock Text="Thể loại:" Foreground="Gray" Margin="0,5"/>
                    <ListBox x:Name="GenresListBox" Height="160" SelectionMode="Multiple"
                     Background="Transparent" BorderThickness="0"
                     ItemContainerStyle="{StaticResource CheckableListBoxItemStyle}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding GenreName}" 
                                  IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Mode=TwoWay}"
                                  IsHitTestVisible="False"
                                  Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" 
                                  FontSize="14" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="Diễn viên tham gia:" Foreground="Gray" Margin="0,15,0,5"/>
                    <ListBox x:Name="ActorsListBox" Height="160" SelectionMode="Multiple"
                     Background="Transparent" BorderThickness="0"
                     ItemContainerStyle="{StaticResource CheckableListBoxItemStyle}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding FullName}" 
                                  IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}, Mode=TwoWay}"
                                  IsHitTestVisible="False"
                                  Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" 
                                  FontSize="14" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="Mô tả:" Foreground="Gray" Margin="0,15,0,5"/>
                    <TextBox x:Name="ShowDescriptionTextBox" Padding="8" FontSize="14"
                     Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Background="#FF1A1A1A" Foreground="White" BorderBrush="#333"/>

                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button x:Name="SaveShowButton" Content="Lưu Vở diễn" Style="{StaticResource ButtonAddStyle}" Click="SaveShowButton_Click" Width="120" Cursor="Hand"/>
                        <Button x:Name="ClearShowButton" Content="Làm mới" Margin="10,0,0,0" Padding="15,8" Click="ClearShowButton_Click" Background="#FFffc107" Foreground="White" BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#FF27324A"/>

        <Grid Grid.Column="2" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#FF0C1220" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Tra cứu theo tên:" Margin="0,0,10,5" Foreground="Gray"/>
                    <TextBox x:Name="SearchTitleTextBox" Grid.Row="1" Grid.Column="0" Padding="5" FontSize="14" Margin="0,0,10,0"/>

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Lọc theo thể loại:" Margin="0,0,10,5" Foreground="Gray"/>
                    <ComboBox x:Name="FilterGenreComboBox" Grid.Row="1" Grid.Column="1" Padding="5" DisplayMemberPath="GenreName" SelectedValuePath="GenreId" Margin="0,0,10,0"/>

                    <Button x:Name="SearchButton" Grid.Row="1" Grid.Column="2" Content="Lọc" Style="{StaticResource ButtonAddStyle}" VerticalAlignment="Bottom" Click="SearchButton_Click"/>
                </Grid>
            </Border>

            <TextBlock Grid.Row="1" Text="DANH SÁCH VỞ DIỄN" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <DataGrid Grid.Row="2"
                      x:Name="ShowsGrid"
                      IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False"
                      LoadingRow="ShowsGrid_LoadingRow" HeadersVisibility="Column, Row"
                      SelectionChanged="ShowsGrid_SelectionChanged" Background="Transparent" RowBackground="Transparent" Foreground="White" BorderThickness="0"
      GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#333"
    RowHeaderWidth="0">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ShowId}" Width="50" Visibility="Collapsed"/>
                    <DataGridTextColumn Header="Tiêu đề" Binding="{Binding Title}" Width="1.5*"/>
                    <DataGridTextColumn Header="Đạo diễn" Binding="{Binding Director}" Width="*"/>
                    <DataGridTextColumn Header="Thời lượng" Binding="{Binding DurationMinutes}" Width="Auto"/>

                    <DataGridTextColumn Header="Thể loại" Binding="{Binding GenresDisplay}" Width="*"/>

                    <DataGridTextColumn Header="Diễn viên" Binding="{Binding ActorsDisplay}" Width="1.5*"/>

                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="Auto" Visibility="Collapsed"/>

                    <DataGridTemplateColumn Header="Hành động" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Sửa" Background="#FF2196F3" Foreground="White" Padding="8, 4" Click="EditButton_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>