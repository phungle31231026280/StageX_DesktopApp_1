<Page x:Class="StageX_DesktopApp.ShowManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quản lý Vở diễn"
      Background="#FF1A1A1A" Foreground="White"
      Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="ButtonAddStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF198754"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="ButtonDeleteStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,3"/>
        </Style>
    </Page.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FF0C1220" CornerRadius="5" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="CHI TIẾT VỞ DIỄN" FontSize="18" FontWeight="Bold" Foreground="#FFffc107"/>
                    <TextBox x:Name="ShowIdTextBox" Visibility="Collapsed"/>

                    <TextBlock Text="Tiêu đề vở diễn:" Margin="0,10,0,5"/>
                    <TextBox x:Name="ShowTitleTextBox" Padding="5" FontSize="14"/>
                    <TextBlock Text="Đạo diễn:" Margin="0,10,0,5"/>
                    <TextBox x:Name="ShowDirectorTextBox" Padding="5" FontSize="14"/>
                    <TextBlock Text="Thời lượng (phút):" Margin="0,10,0,5"/>
                    <TextBox x:Name="ShowDurationTextBox" Padding="5" FontSize="14"/>
                    <TextBlock Text="Link Poster (URL):" Margin="0,10,0,5"/>
                    <TextBox x:Name="ShowPosterTextBox" Padding="5" FontSize="14"/>

                    <TextBlock Text="Thể loại (Giữ Ctrl để chọn nhiều):" Margin="0,10,0,5"/>
                    <ListBox x:Name="GenresListBox" Height="120" SelectionMode="Multiple"
                             Background="#FF333333" Foreground="White" BorderThickness="0"
                             DisplayMemberPath="GenreName"/>
                    <TextBlock Text="Diễn viên tham gia (Giữ Ctrl để chọn nhiều):" Margin="0,15,0,5" Foreground="Gray"/>
                    <ListBox x:Name="ActorsListBox" Height="120" SelectionMode="Multiple"
                             Background="#FF333333" Foreground="White" BorderThickness="0"
                             DisplayMemberPath="FullName"/>
                    <TextBlock Text="Mô tả:" Margin="0,10,0,5" Foreground="Gray"/>
                    <TextBlock Text="Mô tả:" Margin="0,10,0,5"/>
                    <TextBox x:Name="ShowDescriptionTextBox" Padding="5" FontSize="14"
                             Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>

                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <Button x:Name="SaveShowButton" Content="Lưu Vở diễn" Style="{StaticResource ButtonAddStyle}" Click="SaveShowButton_Click"/>
                        <Button x:Name="ClearShowButton" Content="Làm mới" Margin="10,0,0,0" Padding="10,5" Click="ClearShowButton_Click"/>
                    </StackPanel>
                    
                </StackPanel>
                
            </ScrollViewer>
        </Border>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#FF27324A"/>

        <Grid Grid.Column="2" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#FF0C1220" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Tra cứu theo tên:" Margin="0,0,10,5" Foreground="Gray"/>
                    <TextBox x:Name="SearchTitleTextBox" Grid.Row="1" Grid.Column="0" Padding="5" FontSize="14" Margin="0,0,10,0"/>

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Lọc theo thể loại:" Margin="0,0,10,5" Foreground="Gray"/>
                    <ComboBox x:Name="FilterGenreComboBox" Grid.Row="1" Grid.Column="1" Padding="5" DisplayMemberPath="GenreName" SelectedValuePath="GenreId" Margin="0,0,10,0"/>

                    <Button x:Name="SearchButton" Grid.Row="1" Grid.Column="2" Content="Lọc" Style="{StaticResource ButtonAddStyle}" VerticalAlignment="Bottom" Click="SearchButton_Click"/>
                </Grid>
            </Border>

            <TextBlock Grid.Row="1" Text="DANH SÁCH VỞ DIỄN" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <DataGrid Grid.Row="2"
                      x:Name="ShowsGrid"
                      IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False"
                      LoadingRow="ShowsGrid_LoadingRow" HeadersVisibility="Column, Row"
                      SelectionChanged="ShowsGrid_SelectionChanged" Background="Transparent" RowBackground="Transparent" Foreground="White" BorderThickness="0"
      GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#333"
    RowHeaderWidth="0">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="Black"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ShowId}" Width="50" Visibility="Collapsed"/>
                    <DataGridTextColumn Header="Tiêu đề" Binding="{Binding Title}" Width="1.5*"/>
                    <DataGridTextColumn Header="Đạo diễn" Binding="{Binding Director}" Width="*"/>
                    <DataGridTextColumn Header="Thời lượng" Binding="{Binding DurationMinutes}" Width="Auto"/>

                    <DataGridTextColumn Header="Thể loại" Binding="{Binding GenresDisplay}" Width="*"/>

                    <DataGridTextColumn Header="Diễn viên" Binding="{Binding ActorsDisplay}" Width="1.5*"/>

                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="Auto" Visibility="Collapsed"/>

                    <DataGridTemplateColumn Header="Hành động" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Sửa" Background="#FF2196F3" Foreground="White" Padding="8, 4" Click="EditButton_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>