<Page x:Class="StageX_DesktopApp.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Hồ sơ quản trị viên"
      Background="#FF1A1A1A" Foreground="White"
      Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>
        <Style x:Key="InputStyle" TargetType="Control">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource InputStyle}"/>
    </Page.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Hồ sơ cá nhân" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="#FF0C1220" CornerRadius="8" Padding="20">
            <StackPanel Orientation="Horizontal">
                <Border Width="60" Height="60" CornerRadius="30" Background="#FFffc107" Margin="0,0,20,0">
                    <TextBlock x:Name="InfoInitial" Text="U" FontSize="32" FontWeight="Bold" Foreground="Black"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="InfoAccountName" Text="Loading..." FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="InfoEmail" Text="..." FontSize="14" Foreground="Gray"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Họ tên" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="FullNameTextBox"/>

                <TextBlock Text="Địa chỉ (tùy chọn)" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="AddressTextBox"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Ngày sinh" Style="{StaticResource LabelStyle}"/>
                <DatePicker x:Name="DobDatePicker" Padding="8" FontSize="14"/>

                <TextBlock Text="Số điện thoại (tùy chọn)" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="PhoneTextBox"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,25,0,0">
            <Button x:Name="SaveInfoButton" 
                    Content="Cập nhật hồ sơ" 
                    Padding="15,10" FontWeight="Bold" 
                    Background="#FF198754" Foreground="White"
                    Click="SaveInfoButton_Click"
                    MinWidth="150"/>

            <Button x:Name="ChangePasswordButton" 
                    Content="Đặt lại mật khẩu" 
                    Margin="15,0,0,0"
                    Padding="15,10" FontWeight="Bold" 
                    Background="#FFffc107" Foreground="Black"
                    Click="ChangePasswordButton_Click"
                    MinWidth="150"/>
        </StackPanel>
    </Grid>
</Page>